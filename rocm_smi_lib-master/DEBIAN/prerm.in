#!/bin/bash

set -e

rm_ldconfig() {
  # left-hand term originates from ENABLE_LDCONFIG = ON/OFF at package build
  if [ "@ENABLE_LDCONFIG@" == "ON" ]; then
    rm -f /etc/ld.so.conf.d/x86_64-librocm_smi_lib.conf
    ldconfig
  fi
}

case "$1" in
  ( remove )
    rm_ldconfig
  ;;
  ( purge )
  ;;
  ( * )
    exit 0
  ;;
esac
